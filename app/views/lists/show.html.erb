<div class="list-title">
    <h1><%= @list.name %></h1>
    <%= link_to 'Add a film', new_list_bookmark_path(@list), class: "btn btn-flat"  %>
    <%= link_to 'Delete this list',
            list_path(@list.id),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn btn-ghost"  %>
</div>
<div class="container">
  <h1>List of movies (<%= @list.movies.length %>)</h1>
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card">
        <div class="movie-info">
          <h2><%= movie.title %></h2>
          <p>Rating: <%= movie.rating.round(1) %></p>
          <% bookmark = Bookmark.find_by(list_id: @list, movie_id: movie.id) %>
          <%= link_to 'Delete this association',
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn btn-ghost"  %>
        </div>
          <%= image_tag "#{movie.poster_url}", height: "300px" %>
      </div>
    <% end %>
  </div>
</div>
